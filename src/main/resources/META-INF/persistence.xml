    <persistence-unit name="jpa-mysql">
        <description>My Persistence Unit for MySQL</description>
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <!-- Driver JDBC para MySQL -->
            <property name="jakarta.persistence.jdbc.driver"
                      value="com.mysql.cj.jdbc.Driver" />

            <!-- URL de conexi칩n a la base de datos MySQL -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/sale_system" />

            <!-- Usuario de la base de datos -->
            <property name="jakarta.persistence.jdbc.user"
                      value="root" />

            <!-- Contrase침a de la base de datos -->
            <property name="jakarta.persistence.jdbc.password"
                      value="" />

            <!-- Dialecto de Hibernate para MySQL -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQL8Dialect" />

            <!-- Configuraci칩n adicional -->
            <property name="hibernate.hbm2ddl.auto" value="update" /> <!-- Usado para crear/actualizar tablas autom치ticamente -->
            <property name="hibernate.show_sql" value="true" /> <!-- Muestra las consultas SQL en la consola -->
            <property name="hibernate.format_sql" value="true" /> <!-- Formatea el SQL mostrado -->
        </properties>
    </persistence-unit>

</persistence>